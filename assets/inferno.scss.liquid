      }
    }
      
    .mobile-toggler {

      &:after {
        position: absolute;
        right: 0;
        top: 50%;
        @include transform(translateY(-50%));
      }
    }
  }
  
  .multi-add & {
  
    .swatch-element:not(.color) {
      margin-bottom: 50px;
    
      &:hover label {
        @include transform(scale(1));
      }
    }
  }
  
  .swatch-element {
    z-index: 1;
    
    &.swatch-element--helper {
      
      span {
        display: block;
        font-size: em(12px);
        font-weight: 900;
        letter-spacing: 1px;
        text-transform: uppercase;
        line-height: 40px;
        width: 40px;
        
        &:last-child {
          position: absolute;
          top: 100%;
          left: 0;
          right: 0;
        }
      }
    }
    
    input.netterms-qty {
      display: block;
      position: absolute;
      top:100%;
      height: 40px;
      line-height: 40px;
      text-align: center;
      padding: 0 5px;
      font-size:12px;
    }
    
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    input[type=number] {
      -moz-appearance: textfield;
    }
    
    label {
      border: 1px solid $brand-lightgrey;
      position: relative;
      color: $brand-darkgrey;
      @include transition_default();
      
      &:not(.color) {
        min-width: 40px;
        height: 40px;
        line-height: 40px;
        padding: 0;
      }
    }
    
    &:hover {
      z-index: 2;

      label {
        @include transform(scale(1.1));
      }
    }
    
    input:checked + label,
    input.all-checked + label {
      font-weight: 900;
      color: $color-btn-primary;
    }
      
    input.all-checked + label {
      pointer-events: none;
      border-color: $color-btn-primary;
      background-color: $color-btn-primary-text;
      
      ~ .netterms-qty {
        border-top: none;
        border-color: $brand-grey;
      
        &.over_qty {
          border-color: $color-error;
        }
      }
    }

    &.color {

      label {
        border-radius: 50%;
          
        &:before,
        &:after {
          content: '';
          border-radius: 100%;
          position: absolute;
          top: -3px;
          right: -3px;
          bottom: -3px;
          left: -3px;
        }

        &:before {
          border: 1px solid transparent;
        }

        &:hover:before {
          border-top-color: $color-link;
          border-right-color: $color-link;
          border-bottom-color: $color-link;
          @include transform(rotate(360deg));
          @include transition(transform 0.4s linear 0s,border-top-color 0.15s linear, border-right-color 0.15s linear 0.10s, border-bottom-color 0.15s linear 0.20s);
        }

        &:after {
          border: 0 solid transparent;
        }

        &:hover:after {
          border-top: 1px solid $color-link;
          border-left-width: 1px;
          border-right-width: 1px;
          @include transform(rotate(270deg));
          @include transition(transform 0.4s linear 0s, border-left-width 0s linear 0.35s);
        }
      }
      
      &.disabled {
        
        label:hover:after {
          @include transform(none);
        }
        
        label:hover:before {
          @include transform(rotate(45deg));
        }
      }

      input:checked + label {
        border-color: $brand-grey;

        &:before {
          content: '';
          display: block;
          position: absolute;
          top: -4px;
          right: -4px;
          bottom: -4px;
          left: -4px;
          border: 1px solid $color-btn-primary;
          border-radius: 50%;
        }
        
        &:after {
          display: none;
        }
      }
    }
    
    &.disabled {
      
      input.all-checked + label + .netterms-qty {
        pointer-events: none;
        background: $brand-offwhite;
        border-color: $brand-grey;
        opacity: .5;
      }
      
      input + label {
        opacity: .5;
        border-color: $brand-grey;
        
        &:not(.color) {
          background: $brand-lightgrey;
        }
        
        &:after {
          content: '';
          display: block;
          position: absolute;
          left: 0;
          top: 50%;
          @include transform(rotate(45deg));
          height: 1px;
          background: $color-error;
          width: 100%;
        }
      }
    }
  }
  
  .variant-tag {
    position: absolute;
    top: 100%;
    font-size: 10px;
    text-align: center;
    left: 0;
    right: 0;
    color: $color-error;
    text-transform: uppercase;
    font-weight: 900;
    letter-spacing: 1px;
    line-height: 10px;
  }
