@mixin fancy-underline() {
  position: relative;
  overflow: hidden;
  display: inline-block;
        
  &:before {
    content: '';
    position: absolute;
    @include transition_default();
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background: $color-btn-primary;
    @include transform(translateX(-100%));
    z-index: 1;
  }
        
  &:after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background: $color-link;
    opacity: 0;
  }
      
  &:hover {

    &:before {
      @include transform(translateX(0));
    }
  }
}

@mixin fancy-outline($shadow: $brand-grey, $color: $color-link) {
  position: relative;
  box-shadow: inset 0 0 0 1px $shadow;
  
  &::before,
  &::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border: 1px solid transparent;
    width: 0;
    height: 0;
  }

  &::before {
    top: 0px;
    left: 0px;
  }

  &::after {
    bottom: 0px;
    right: 0px;
  }
  
  &:hover {
    color: $color;
  }

  &:hover::before,
  &:hover::after {
    width: 100%;
    height: 100%;
  }

  &:hover::before {
    border-top-color: $color;
    border-right-color: $color;
    @include transition(width 0.125s ease-out, height 0.125s ease-out 0.125s);
  }

  &:hover::after {
    border-bottom-color: $color;
    border-left-color: $color;
    @include transition(border-color 0s ease-out 0.25s, width 0.125s ease-out 0.25s, height 0.125s ease-out 0.375s);
  }
}

