// Technology New Template
.technology-list {
  border-bottom: 1px solid #eaeaea;
  ul {
    display:flex;
    justify-content: center;
    margin: 25px 0;
    @media only screen and (max-width: 767px) {
      display: block;
      margin: auto;
      padding: 15px 30px;
    }
    li{
      list-style-type: none;
      padding: 0;
      font-weight:700;
      min-width: 175px;
      border: 1px solid #eaeaea;
      margin-right: 25px;
      text-align: center;
      transition: 0.5s;
      @media only screen and (max-width: 767px) {
        margin: 10px auto;
      }
      a{
        display: block;
        padding: 9px 0px;
        transition: 0.5s;
        &:hover{
          color: #e89d26;
          transition: 0.5s;
        }
      }
      &:hover{
        border: 1px solid #e89d26;
        color: #e89d26;
        transition: 0.5s;
      }
      &.active{
        background-color: #2C5234;
        border: 1px solid #2C5234;
        a{
          color: #ffff;
        }
      }
    }
  }
}
.whitebg {
  background-color:#fff;
  margin: 0;
}
.technology-wrapper-inner{
  padding: 40px 80px 10px 80px;
  @media only screen and (max-width: 767px) {
    padding: 20px 30px;
  }
}
.technology-wrapper {
  background-color:#f3f3f3;

  .blog-details-wrapper{
    padding: 0 80px;
    @media only screen and (max-width: 991px) {
      padding: 0;
    }
  }
  .technology-item{
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    min-height: 500px;
    @media only screen and (max-width: 991px) {
      display: block;
    }
    .col-12{
      @media only screen and (max-width: 991px) {
        flex: 100%;
        max-width: 100%;
        &.p-4{
          padding: 0 !important;
        }
      }
    }
    
    .blog-img {
      width: 100%;
      padding: 50% 0;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      @media only screen and (max-width: 991px) {
        padding: 30% 0;
      }
    }
    p{
