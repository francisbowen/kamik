/******* DEALER LOCATOR PAGE ******/

.dealer-locator-container {
  position: relative;
}

.dealer-locator-push {
  padding-top: 70px;
  padding-bottom: 70px;
}

.dealer-locator--locations,
.featured-slideshow {
  position: relative;
  
  .dealer-locator--location-ad {
    display: block;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    margin-top: 10px;
    margin-bottom: 10px;

    &:before {
      content: '';
      display: block;
      padding-top: 55%;
    }
  }
}

.dealer-locator--locations {
  
  &:before {
    content: '';
    display: block;
    background: $color-body;
    position: absolute;
    top: -20px;
    right: -10px;
    bottom: -20px;
    left: -10px;
  }
  
  > * {
    position: relative;
  }
  
  &.rte {
  
    h2 {
      font-size: em(22px);
      color: $brand-green;
    }
    
    #store-locator--ads {
  
      a {
        border: 1px solid $brand-lightgrey;
      }
    }
  }
  
  input {
    width: 100%;
  }
  
  .postal_search {
    position: absolute;
    right: 0;
    bottom: 0;
    line-height: 1.2;
    
    .icon-search {
      width: 15px;
      height: 15px;
    }
  }
  
  #store-locator--locations {
    overflow: scroll;
  }
}

.featured-slideshow {
  
  .dealer-locator--footer-single {
    width: 20%;
    margin-left: 5px;
    margin-right: 5px;
    @include transform(scale(1));
    
    &:hover {
      @include transform(scale(1.05));
    }
  }
}

/******* CART TEMPLATE *******/

.cart {
  
  .cart__image {
    width: 100%;
  }
  
  .cart__row {
    border-bottom: 1px solid $brand-grey;
    
    &:last-child {
      border-bottom: none;
    }

    a:not(.btn) {
      text-decoration: none;
      color: $brand-green;
      border-bottom: none;
    }

    .list-view-item__title {
      font-size: 22px;
      line-height: 22px;
      font-weight: 600;
    }
    
    p + p {
      margin-top: 0;
    }
  }
  
  .cart__footer {
    background: $brand-offwhite;
    padding: 20px;
    
    #checkout {
      width: 100%;
    }
  }
  
  .orignal-total-price {
    font-size: em(24px);
    font-weight: 900;
    color: $brand-green;
    font-family: $font-stack-header;
    letter-spacing: 1px;
  }
}

.cart {
  th,
  td {
    border: 0;
  }

  td {
    padding: $gutter-site-mobile 0;
  }

  th {
    padding: ($gutter-site / 2) 0;
  }

  .cart__meta {
    padding-right: 15px;
  }
}

.cart__meta-text {
  padding: 5px 0;
  font-style: italic;
}

.cart__qty-label {
  @include visually-hidden();
}

.cart__qty-input {
  text-align: center;
  width: 60px;
  padding-left: 5px;
  padding-right: 5px;

  @include media-query($min,$sm) {
    padding-top: 2px;
    padding-bottom: 2px;
  }
}

.cart__edit {
  margin-top: 10px;
}

.cart__edit-text--cancel {
  .cart__edit--active & {
    display: none;
  }
}

.cart__edit-text--edit {
  display: none;

  .cart__edit--active & {
    display: block;
  }
}

.cart__edit-text--cancel,
.cart__edit-text--edit {
  pointer-events: none;
}

.cart__row {
  p {
    margin-bottom: 0;

    + p {
      margin-top: 10px;
      margin-bottom: 10px;
    }
  }
}

.cart__subtotal {
  font-size: em(24px);
  font-family: $font-stack-header;
  font-weight: 900;
  letter-spacing: 1px;
  padding-left: $gutter-site / 2;

  @include media-query($min,$md) {
    padding-left: $gutter-site;
    min-width: 150px;
    display: inline-block;
  }
}

.cart__savings {
  padding-top: 18px;
}

.cart__savings-amount {
  padding-left: $gutter-site / 2;

  @include media-query($min,$md) {
    padding-left: $gutter-site;
    // min-width: 150px;
    display: inline-block;
  }
}

.cart__footer {
  padding-top: $section-spacing-small;
}

.cart__update--large {
  margin-right: 10px;
}

.cart__shipping {
  font-style: italic;
  padding: 18px 0 20px;
  font-size: em(12px);
}

.cart-note__label,
.cart-note__input {
  display: block;

  @include media-query($max,$sm) {
    margin: 0 auto;
  }
}

.cart-note__label {
  margin-bottom: 15px;
}

.cart-note__input {
  min-height: 50px;
  width: 100%;

  @include media-query($max,$sm) {
    margin-bottom: 40px;
  }
}

.cart__image-wrapper a {
  display: block;
  padding-right: $section-spacing-small / 2;

  @include media-query($min,$md) {
    padding-right: $section-spacing-small;
  }
}

.cart__image-wrapper {
  @include media-query($min,$md) {
    width: 130px;
  }
}

.cart__meta {
  @include media-query($min,$md) {
    max-width: 300px;
  }
}

  .cart__remove {
  @include media-query($min,$md) {
    margin-top: 4px;
  }
}

.cart__qty {
  @include media-query($min,$md) {
    text-align: center;
  }
  select{
    border:0px;
    font-size:20px;
  }
}

.cart {
  @include media-query($max,$sm) {
    table {
      display: block;
      width: 100%;
    }

    thead {
      display: none;
    }

    tr,
    tbody {
      width: 100%;
    }

    tbody {
      display: block;
    }

    .cart__update-wrapper {
      padding-top: 0;
    }
  }
}

.cart__update--show {
  @include media-query($max,$sm) {
    td {
      padding-bottom: 10px;
    }

    .cart__update-wrapper {
      @include display-flexbox();
      @include align-items(center);
      @include justify-content(space-between);
      @include flex-wrap(wrap);
    }
  }
}

.cart-flex {
  @include media-query($max,$sm) {
    @include display-flexbox();
    @include flex-wrap(wrap);
    @include align-items(center);
  }
}

.cart-flex-item {
  @include media-query($max,$sm) {
    display: block;
    min-width: 0;
    @include flex(1 1 100%);
  }
}

.cart__meta {
  @include media-query($max,$sm) {
    @include flex(1 1 0%);
  }
}

.cart__image-wrapper {
  @include media-query($max,$sm) {
    @include flex(0 0 85px);
  }
}

.cart__price-wrapper {
  @include media-query($max,$sm) {
    @include flex(0 1 24%);
    text-align: right;
  }
}

.cart__header {
  @include media-query($max,$sm) {
    @include visually-hidden();
  }
}

.cart-message {
  @include media-query($max,$sm) {
    padding-top: 20px;
  }
}

.cart__qty {
  @include media-query($max,$sm) {
    padding: 0 10px;
  }
}

.cart__qty-label {
  @include media-query($max,$sm) {
    @include visually-shown();
    display: inline-block;
    vertical-align: middle;
    font-size: em(13);
    margin-right: 5px;
  }
}

