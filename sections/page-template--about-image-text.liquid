{% for block in section.blocks %}
  {% render 'image-with-text', layout: block.settings.layout, image: block.settings.image, title: block.settings.title, content: block.settings.text, href: block.settings.button_link, btn: block.settings.button_label %}
{% endfor %}

{% unless section.blocks.size > 0 %}
  <style>#shopify-section-{{ section.id }} { display: none; }</style>
{% endunless %}

{% schema %}
  {
    "name": "About Us - Text/image",
    "class": "section-push",
    "settings": [],
    "blocks": [
      {
        "type": "row",
        "name": "Image/Text Row",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "layout",
            "label": "Layout",
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": "Image on left"
              },
              {
                "value": "right",
                "label": "Image on right"
              }
            ]
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ]
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
