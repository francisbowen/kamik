<div class="section-spacing section--image-with-text">
  {% render 'image-with-text', layout: section.settings.layout, image: section.settings.image, title: section.settings.title, content: section.settings.text, href: section.settings.button_link, btn: section.settings.button_label, popup: section.settings.popup, popupid: 'kamik-club--popup' %}
</div>

{% if section.settings.popup != blank %}
  <div id="kamik-club--popup" class="white-popup mfp-hide">
    <div class="container">
      <div class="row">
        <div class="col-60 rte">
          {{ section.settings.popup }}
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% if section.settings.bg != blank %}
  <style>
    #shopify-section-{{ section.id }} .feature-row__image:before {
      background-image: url({{ section.settings.bg | img_url: '1000x' }});
    }
  </style>
{% endif %}

{% schema %}
  {
    "name": "Kamik Club Image/Text Row",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg",
        "label": "Horiztonally Repeating Background Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Image on left"
          },
          {
            "value": "right",
            "label": "Image on right"
          }
        ]
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "textarea",
        "id": "popup",
        "label": "Popup content",
        "info": "Will disable 'Button link'"
      }
    ]
  }
{% endschema %}
